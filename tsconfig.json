{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Native",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "isolatedModules": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "extends": "expo/tsconfig.base",
  "include": [".eslintrc.js", "**/*"],
  "exclude": ["./src/reference/**/*"]
}
